<!DOCTYPE html>

<title>Notification index</title>

{% block body %}
    <h1>Notification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Body</th>
                <th>State</th>
                <th>Notification_type</th>
                <th>Notification_date</th>
                <th>Associated_link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td>{{ notification.id }}</td>
                <td>{{ notification.body }}</td>
                <td>{{ notification.state }}</td>
                <td>{{ notification.notificationType }}</td>
                <td>{{ notification.notificationDate ? notification.notificationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ notification.associatedLink }}</td>
                <td>
                    <a href="{{ path('app_notification_show', {'id': notification.id}) }}">show</a>
                    <a href="{{ path('app_notification_edit', {'id': notification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_notification_new') }}">Create new</a>
{% endblock %}
