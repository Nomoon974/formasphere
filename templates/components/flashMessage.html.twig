<div id="flash-messages">
        {% for label, messages in app.flashes %}
                <div class="flash-message flash-{{ label }}">
                        <span class="close-bttn">&times;</span>
                        {% for message in messages %}
                                <p class="text-flash">{{ message }}</p>
                        {% endfor %}
                </div>
        {% endfor %}
</div>